<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("DOKTOR", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Ana Sayfa", "Index", "Home")</li>
                    <li>@Html.ActionLink("Birlik", "Index", "dbo_unuity")</li>
                    <li>@Html.ActionLink("Bölüm", "Index", "dbo_section")</li>
                    <li>@Html.ActionLink("Kayıt", "Index", "registations")</li>
                    <li>@Html.ActionLink("Kullanıcı", "Index", "users")</li>
                    @*<li class="nav navbar-nav navbar-right">@Html.ActionLink("Giriş Yap", "Index", "Logın")</li>*@

                </ul>

                <ul class="nav navbar-right" style="color:white">

                    @if (Session["UserId"] != null)
                    {
                        <li style="color: white">Hello @Session["UserName"]</li>
                        @Html.ActionLink("Logout", "Logout", "Login")


                    }

                    else
                    {
                        @Html.Partial("_LoginPartial")

                    }
                   

                </ul>
                
</div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


</body>
</html>
